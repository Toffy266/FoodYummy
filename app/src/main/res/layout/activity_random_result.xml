<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RandomResult">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Food Yummy"
            android:textColor="#666"
            android:textSize="16.5sp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/archivo_black"
        android:paddingTop="90dp"
        android:text="กินอะไรดี"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/random2"/>

    <ImageView
        android:id="@+id/eatthis"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/random1"/>

    <TextView
        android:id="@+id/eatfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/archivo_black"
        android:layout_marginTop="500dp"
        android:text="เมนู"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clicktorandom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:onClick="onChange"
        android:text="Random"
        android:textColor="@color/grey"
        android:textSize="25dp"
        tools:ignore="OnClick"
        android:background="@drawable/my_button_bg"/>

</RelativeLayout>