<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RandomFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/archivo_black"
        android:paddingTop="24dp"
        android:text="RANDOM FOOD"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/thaifood"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/bt1" />

    <ImageButton
        android:id="@+id/engfood"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/bt2" />

    <ImageButton
        android:id="@+id/dessertfood"
        android:layout_width="155dp"
        android:layout_height="160dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/bt3" />

    <ImageButton
        android:id="@+id/custom"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/bt4" />

</RelativeLayout>