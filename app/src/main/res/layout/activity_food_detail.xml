<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FoodDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fb_iconfood"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:src="@drawable/detail3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_below="@+id/fb_iconfood"
                android:layout_marginTop="-75dp"
                android:src="@drawable/detail1" />

            <TextView
                android:id="@+id/fb_menutext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="380dp"
                android:fontFamily="@font/archivo_black"
                android:text="ชื่ออาหาร"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/fn_ingred"
                android:layout_width="105dp"
                android:layout_height="44dp"
                android:layout_below="@+id/fb_menutext"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/detail2"
                android:gravity="center"
                android:text="วัตถุดิบ"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="21.5dp" />

            <TextView
                android:id="@+id/fb_ingred"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/fn_ingred"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="วัตถุดิบ"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:id="@+id/lines"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_below="@+id/fb_ingred"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="#C1C1C1" />

            <TextView
                android:id="@+id/fn_howto"
                android:layout_width="105dp"
                android:layout_height="44dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/detail2"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                android:layout_below="@+id/lines"
                android:gravity="center"
                android:text="วิธีทำ"
                android:textColor="@color/black"
                android:textSize="21.5dp" />

            <TextView
                android:id="@+id/takehowto"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/fn_howto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="วิธีทำ"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yt"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/takehowto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="95dp"
                android:background="@drawable/my_button_bg"
                android:text="คลิปวิธีทำ"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_map"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/takehowto"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="95dp"
                android:layout_toRightOf="@id/btn_yt"
                android:background="@drawable/my_button_bg"
                android:text="ร้านอาหารแนะนำ"
                android:textColor="@color/black" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

