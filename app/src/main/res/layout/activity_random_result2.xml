<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:context=".RandomResult">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Food Yummy"
            android:textColor="#666"
            android:textSize="16.5sp">

        </TextView>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/archivo_black"
        android:paddingTop="90dp"
        android:text="กินอะไรดี"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/random2" />

    <ImageView
        android:id="@+id/eatthis"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@drawable/random1" />

    <TextView
        android:id="@+id/eatfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/archivo_black"
        android:text="เมนู"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clicktorandom"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/my_button_bg"
        android:onClick="onChange"
        android:text="Random"
        android:textColor="@color/grey"
        tools:ignore="OnClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inputagain"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/clicktorandom"
        android:background="@drawable/my_button_bg"
        android:text="Enter Again"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/bginput"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/inputcustom"
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="@drawable/bgform"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/archivo_black"
            android:text="Enter Menu"
            android:textColor="#000000"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texts"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="แยกข้อความด้วย space (ช่องว่าง), comma ( , ) หรือ semicolon ( ; )"
            android:inputType="textMultiLine"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>